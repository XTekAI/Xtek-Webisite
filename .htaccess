<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Serve root as dist/index.html
  RewriteRule ^$ dist/index.html [L]

  # If the requested URI exists inside /dist, serve it.
  # We check if the file exists in the dist folder relative to document root
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -f
  RewriteRule ^(.*)$ dist/$1 [L]

  # For any other non-file route, serve index.html (Client Side Routing)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . dist/index.html [L]
</IfModule>
